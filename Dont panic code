void setup() {
  Serial.begin(9600);

  if (!oled.begin(SSD1306_SWITCHCAPVCC, 0x3C)) {
    Serial.println(F("SSD1306 baslatilamadi!"));
    while (1);
  }

  delay(2000);
  oled.clearDisplay();
}

void loop() {
  oled.clearDisplay();
  
  // image dizisini ekrana bas
  oled.drawBitmap(0, 0, image, SCREEN_WIDTH, SCREEN_HEIGHT, WHITE);
  oled.display();
  
  delay(1000);
}
